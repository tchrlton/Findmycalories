  <body>

    <% include ./partials/navbar.ejs %>

        <header class="jumbotron my-4" style="text-align: center;">
          <h1 class="display-3">Welcome to Findmycalories</h1>
          <p class="lead">A simple, easy to use application that shows calories for your specific goal.</p>
          <a href="#" class="btn btn-primary btn-lg">Sign up</a>
        </header>

        <section class="row text-center">

          <section class="col-lg-4">
            <i class="icon ion-md-person"></i>
